.profile {
    background: #1296db;
    height: 400rpx;
    text-align: center;
    position: relative;
    width: 100%;
}
.profile-img {
    width: 200rpx;
    height: 200rpx;
    display: block;
    overflow: hidden;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    transform: translate(-50%, 60rpx);
}
.profile-name {
    font-size: 36rpx;
    color: #fff;
    position: absolute;
    left: 50%;
    transform: translate(-50%, 270rpx);
}
.get-userInfo {
    background: #1296db;
    color: white;
    font-weight: 500;
    margin-top: 20rpx;
}
.userName {
    margin-top: 16rpx;
    text-align: center;
}